@model Book

<link rel="stylesheet" type="text/css" href="~/css/RegStyle.css">

<div class="row">
    <div class="col-md-4">
        <h1 class="register">Add new book</h1>
        <form asp-action="AddedBook">
            <hr />
            <div class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="book_name" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="book_name">Title: </label>
                <span asp-validation-for="book_name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="author" class="form-control" aria-required="true" />
                <label asp-for="author">Author: </label>
                <span asp-validation-for="author" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="book_genre" class="form-control" aria-required="true" />
                <label asp-for="book_genre">Book genre: </label>
                <span asp-validation-for="book_genre" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="short_dicription" class="form-control" aria-required="true" />
                <label asp-for="short_dicription">Short dicription: </label>
                <span asp-validation-for="short_dicription" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="rating" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="rating">Rating(0 - 5)</label>
                <span asp-validation-for="rating" class="text-danger"></span>
            </div>
            <button id="addSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
